doctype html
html
    head
        link(rel="stylesheet", href="/bootstrap-4.5.0-dist/css/bootstrap.css")
        link(rel="stylesheet", href="health.css")
        title Registration
    body

        div.containerfluid
            div.row
                div.col-12
                    img.imglogo(src="img/form-header-image.png", alt="Ministry of health logo")
            div.row
                div.col-3
                div.col-6
                    h6.center Ministry of Health
                div.col-3
            div.row
                div.col-3
                div.col-6
                    h3.center COVID-19(CORONA VIRUS)
                div.col-3
            div.row
                div.col-3
                div.col-6
                    h6.center Virus-Test Registration Form
                div.col-3
        div.container
            div.row
                div.col-sm-3
                div.col-sm-6
                    form#tests(action="/" method="POST" name="tests")
                        div.form-group.row
                            div.col-sm-6      
                                label(for="surname") Surname
                                input.form-control(type="text" name="surname" id="surname")
                            div.col-sm-6
                                label(for="givenName") Given name
                                input.form-control(type="text" name="givenName")
                        div.form-group.row
                            div.col-sm-6
                                label(for="dob") Date of Birth
                                input.form-control(type="date" name="dob")
                            div.col-sm-6
                                label(for="por") Place of residence
                                input.form-control(type="text" name="por")
                        div.form-group.row
                            div.col-sm-6
                                label(for="occupation") Occupation
                                input.form-control(type="text" name="occupation")
                            div.col-sm-6
                                label(for="nationality") Nationality
                                input.form-control(type="text" name="nationality")
                        div.form-group-row
                            div.col-sm-12
                                label(for="") Gender
                        div.custom-control.custom-radio.custom-control-inline
                            input.custom-control-input(type="radio" name="gender" id ="male" value ="male")
                            label.custom-control-label(for="male") Male
                        div.custom-control.custom-radio.custom-control-inline
                            input.custom-control-input(type="radio" name="gender" id ="female" value ="female")
                            label.custom-control-label(for="female") Female
                        div.form-group-row
                            label(for="category") Category
                        div.form-group-row
                            select.form-control#category(name="category") -- Select Category--
                                option(value="" placeholder="--select Category")
                                option(value="local resident") Local Resident
                        div.form-group-row
                            div.col-sm-6
                            div.col-sm-6
                                button.btn.btn-outline-success.btnRight(type="submit" onclick="validation()") Register

                div.col-sm-3









    
    script(src="/bootstrap-4.5.0-dist/js/jquery-3.5.1.min.js")
    script(src="/bootstrap-4.5.0-dist/js/bootstrap.js")
    script(src="validation.js")